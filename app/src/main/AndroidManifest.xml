<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.linhtetko.themoviebookingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:name=".MovieBookingApp"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheMovieBookingApp"
        tools:targetApi="31">
        <activity
            android:name=".activities.PlanSeatActivity"
            android:exported="true" />
        <activity
            android:name=".activities.VoucherActivity"
            android:exported="false" />
        <activity
            android:name=".activities.CardInfoActivity"
            android:exported="false" />
        <activity
            android:name=".activities.PaymentMethodActivity"
            android:exported="false" />
        <activity
            android:name=".activities.BuySnackActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ChooseCinemaAndTimeActivity"
            android:exported="false"
            android:theme="@style/Theme.TheMovieBookingApp.MovieDetail" />
        <activity
            android:name=".activities.MovieDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.TheMovieBookingApp.MovieDetail" />
        <activity
            android:name=".activities.AuthActivity"
            android:exported="false" />
        <activity
            android:name=".activities.WelcomeActivity"
            android:exported="true"
            android:theme="@style/Theme.TheMovieBookingApp.Welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>